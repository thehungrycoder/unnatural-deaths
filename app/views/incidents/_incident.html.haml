.panel.panel-default
  .panel-heading
    %h4
      = incident.title
    %span.small
      = incident.happened_on
  .panel-body
    .row-fluid
      %p
        = incident.details

      .clearfix
      .col-md-6
        - if incident.men_wounded.present?
          %h6
            Men Wounded
            %span.label.label-warning
              = incident.men_wounded

        - if incident.women_wounded.present?
          %h6
            Women Wounded
            %span.label.label-warning
              = incident.women_wounded

        - if incident.minor_wounded.present?
          %h6
            Minor Wounded
            %span.label.label-warning
              = incident.minor_wounded

      .col-md-6
        - if incident.men_dead.present?
          %h6
            Men Died
            %span.label.label-danger
              = incident.men_dead

        - if incident.women_dead.present?
          %h6
            Women Died
            %span.label.label-danger
              = incident.women_dead


        - if incident.minor_dead.present?
          %h6
            Minor Died
            %span.label.label-danger
              = incident.minor_dead

